@page "/account/forgot-password"
@attribute [AllowAnonymous]
@inject IStringLocalizer<ForgotPassword> L
@inject IStringLocalizer<SharedResource> LS

<EditForm Model="@_forgotPasswordRequest" OnValidSubmit="SubmitAsync">
    <MudCard Elevation="0">
        <MudCardHeader>
            <CardHeaderContent>
                <MudTooltip Text="Go Back">
                    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Inherit" Edge="Edge.Start"
                        Link="/" />
                </MudTooltip>
                <div class="d-flex justify-center">
                    <img src="full-stack-hero-logo.png" Style="height:120px" />
                </div>
                <div class="fsh-center-text">
                    <MudText Typo="Typo.h4" GutterBottom="true" style="margin-bottom:5px">@L["Forgot Password?"]
                    </MudText>
                    <MudText>@L["We can help you by resetting your password."]</MudText>
                </div>
                <br />
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <DataAnnotationsValidator />
                <CustomValidation @ref="_customValidation" />
                <MudItem xs="12">
                    <MudTextField T="string" Label="Tenant" Variant="Variant.Outlined" @bind-Value="Tenant"
                        For="@(() => Tenant)" Required />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField T="string" Label="E-mail" Variant="Variant.Outlined"
                        @bind-Value="_forgotPasswordRequest.Email" For="@(() => _forgotPasswordRequest.Email)"
                        InputType="InputType.Email" Adornment="Adornment.End" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions Class="pb-4 pl-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit" Disabled="BusySubmitting" Class="ml-auto">
                @L["Forgot Password"]</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>