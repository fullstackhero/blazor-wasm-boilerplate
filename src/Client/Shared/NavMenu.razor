@using System.Security.Claims
<PersonCard
    Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text); margin-bottom:0px!important" />
<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Start</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Home">Home</MudNavLink>
    <MudNavLink Href="https://fullstackhero.net/getting-started/" Match="NavLinkMatch.All"
        Icon="@Icons.Material.Outlined.Stars">Getting Started</MudNavLink>
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Personal</MudText>
    @if (_canViewDashboard)
    {
        <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Dashboard">Dashboard
        </MudNavLink>
    }
    <MudNavLink Href="/account" Icon="@Icons.Material.Outlined.Person">Account</MudNavLink>
    @if (_canViewAuditLogs)
    {
        <MudNavLink Href="/audit-logs" Icon="@Icons.Material.Outlined.SecurityUpdateGood">Logs</MudNavLink>
    }
    @if (_canViewProducts || _canViewBrands)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Management</MudText>
        <MudNavGroup Title="Catalog" Icon="@Icons.Filled.AddBox">
            @if (_canViewProducts)
            {
                <MudNavLink Href="/catalog/products" Icon="@Icons.Filled.ShoppingBag">
                    Products
                </MudNavLink>
            }
            @if (_canViewBrands)
            {
                <MudNavLink Href="/catalog/brands" Icon="@Icons.Filled.BrandingWatermark">
                    Brands
                </MudNavLink>
            }
        </MudNavGroup>
    }
    @if (_canViewUsers || _canViewRoles)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Administration</MudText>
        <MudNavLink Href="/users" Icon="@Icons.Material.Outlined.PeopleAlt">Users</MudNavLink>
        <MudNavLink Href="/roles" Icon="@Icons.Material.Outlined.EmojiPeople">Roles</MudNavLink>
        <MudNavLink Href="/tenants" Icon="@Icons.Material.Outlined.LocalMall">Tenants</MudNavLink>
    }
</MudNavMenu>