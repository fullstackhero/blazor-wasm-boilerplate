<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader style="padding:10px!important">
        <CardHeaderAvatar>
            @if(string.IsNullOrEmpty(this.ImageUri))
            {
                <MudAvatar Size="Size.Medium" Color="Color.Primary" Class="ma-2">@FullName?.ToUpper().FirstOrDefault()</MudAvatar>
            }
            else
            {
                <MudAvatar Image="https://avatars.githubusercontent.com/u/31455818?v=4" />
            }
            
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">@FullName</MudText>
            <MudText Typo="Typo.caption">@Email</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>
