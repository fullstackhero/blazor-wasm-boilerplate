@using FSH.BlazorWebAssembly.Client.Settings
@inherits LayoutComponentBase


<MudThemeProvider Theme="_currentTheme" />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <div class="d-flex flex-column mud-width-full">
        <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px">
            <div class="d-flex justify-center">
           <img src="full-stack-hero-logo.png"  Style="height:200px; width:200px"  />
           </div>
            @Body
        </MudPaper>
        <MudAlert Severity="Severity.Info" Class="mt-8 mud-width-full" Style="max-width:500px;" >No authentication is required, click sign in.</MudAlert>
    </div>
</MudContainer>

@code {
    private MudTheme _currentTheme = new FSHTheme();
}